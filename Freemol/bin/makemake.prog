print MAKEFILE "#\n";
print MAKEFILE "include ../Makeflags\n";
print MAKEFILE "include ./Makelocal\n#\n";
#
# Print Main files options
#
print MAKEFILE "#\n";
print MAKEFILE "# Main files\n";
print MAKEFILE "#\n";
print MAKEFILE "PROG = \$(HEREPROG)\n";
