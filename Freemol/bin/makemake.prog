# make clean
#
print MAKEFILE "clean:\n";
print MAKEFILE "\trm -f \$(PROG) \$(OBJS) \$(LLIB) *.mod *.lst \n\n";
#
# Make .f90 a valid suffix
#
print MAKEFILE ".SUFFIXES: \$(SUFFIXES) .f90 .F90\n\n";
#
#
# Dependency listings
#
print MAKEFILE "#\n";
print MAKEFILE "# DEPENDENCIES\n";
print MAKEFILE "#\n";
&MakeDependsFREEMOL($ARGV[1]);
