&PrintWords(8, 0, @srcs);
print MAKEFILE "\n";
#
# Select Other Object files
#
print MAKEFILE "OOBJS = ";
@objs = @srcs;
foreach (@objs) { s/\.[^.]+$/.o/ };
&PrintWords(8, 0, @objs);
print MAKEFILE "\n";
#
# Print field for any other library
#
print MAKEFILE "OLIBS = \n";
print MAKEFILE "#\n";
print MAKEFILE "#\n";
#
# make all target: local program and documents
#
print MAKEFILE "#\n";
print MAKEFILE "# Main Targets\n";
print MAKEFILE "#\n";
print MAKEFILE "   all: \$(PROG) docs\n\n";
print MAKEFILE ".PHONY: all docs\n\n";
#
# make objects
#
print MAKEFILE "#\n";
print MAKEFILE "# Make Objects\n";
print MAKEFILE "#\n";
foreach $lsrcsf (@srcsf) {
    $lobjsf = $lsrcsf;
    $lobjsf =~ s/\.[^.]+$/.o/;
    print MAKEFILE "   $lobjsf : $lsrcsf\n";
    print MAKEFILE "\t\$(FC) \$(FFLAGS) \$(SECFLAGS) -c \$< -o \$\@\n\n";
    print MAKEFILE "\n";
};
#
# make local library
#
print MAKEFILE "\$(PROG): \$(OBJS)\n";
print MAKEFILE "\t\$(FC) \$(FFLAGS) \$(LDFLAGS) -o \$(PROG) \$(OBJS) \$(LIBS)\n";
print MAKEFILE "\tcp \$(PROG) \$(FMBIN)/.\n";
